---
import Header from '../components/Header.astro'
interface Props {
	title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='Astro description' />
		<meta name='viewport' content='width=device-width' />
		<link rel='preconnect' href='https://fonts.googleapis.com' />
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
		<link
			href='https://fonts.googleapis.com/css2?family=Reddit+Mono:wght@200..900&display=swap'
			rel='stylesheet'
		/>
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='generator' content={Astro.generator} />
		<title>Cortito - {title}</title>
	</head>
	<body class='overflow-hidden'>
		<main class='bg-ctgray grid h-screen place-content-center overflow-y-auto p-6 overflow-x-hidden'>
			<Header />
			<slot />
		</main>
		<style is:global>
			:root {
				--blue-gradient: linear-gradient(45deg, #2222bb, #7878cd, #cbcbff);
				--custom-gray: linear-gradient(to top, #0f2027, #203a43, #2c5364);
			}
			main {
				font-family: 'Reddit Mono', monospace;
			}
			#dashboard-form::-webkit-scrollbar {
				display: none;
			}
			.bg-ctgray {
				background-image: var(--custom-gray);
			}
			.bg-bluegradient {
				background-image: var(--blue-gradient);
			}

			.animate-fadeIn {
				animation: fadeIn 0.4s normal;
			}
			@keyframes fadeIn {
				from {
					transform: translateY(15%);
					opacity: 0;
				}
				to {
					transform: translateX(0);
					opacity: 1;
				}
			}

			.animate-fadeOut {
				animation: fadeOut 0.4s normal;
			}
			@keyframes fadeOut {
				from {
					transform: translateY(0);
					opacity: 1;
				}
				to {
					transform: translateY(15%);
					opacity: 0;
				}
			}
			.animate-fromOpacity {
				animation: fromOpacity 1s normal;
			}
			@keyframes fromOpacity {
				from {
					opacity: .6;
				}
				to {
					opacity: 1;
				}
			}
		</style>
	</body>
</html>
