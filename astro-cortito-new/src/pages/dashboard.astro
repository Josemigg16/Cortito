---
import Layout from '../layouts/Layout.astro'
import ToggleView from '../components/ToggleView'
import ShowShortcuts from '../components/ShowShortcuts'
import { getSession } from 'auth-astro/server'
import Modal from '../components/Modal.astro'
const session = await getSession(Astro.request)
---

<Layout title='dashboard'>
	<Modal />
	<section class='h-[88vh] p-12'>
		<header class='flex items-center justify-between'>
			<h1
				class='text-center text-3xl font-bold text-white opacity-90 md:text-left md:text-6xl mb-6'
			>
        Your shortcuts
			</h1>
			<ToggleView client:load />
		</header>
		<ShowShortcuts client:load session={session} />
	</section>
</Layout>
