---
import { getSession } from "auth-astro/server";
import Layout from "@/layouts/Layout.astro";
import Form from "@/components/Form";
import SessionButtons from "@/components/SessionButtons";
const session = await getSession(Astro.request);
---

<Layout title="Create your first shortcut">
  <main>
    <article
      class="h-[30rem] flex flex-col justify-between border-2 border-gray-500
	rounded-md px-4 pt-20 md:p-14 pb-8 items-center relative"
    >
      <label
        class="uppercase md:text-5xl text-3xl font-bold text-center w-[17ch] cursor-pointer
	  hover:text-gray-400"
        for="input"
      >
        Create your custom shortcut
      </label>
      <section class="h-full flex flex-col justify-end">
        <Form client:load session={session} />

        <SessionButtons client:load session={session} />
      </section>
      <a
        href="/shortcuts"
        class="bg-gray-700 absolute -bottom-24 w-full text-center rounded py-3 hover:outline"
      >
        Go to Your Shortcuts
        <i
          class="fa-solid fa-arrow-right absolute top-3.25 md:right-[8rem] right-10 text-4xl md:scale-100 scale-75"
        ></i>
      </a>
    </article>
  </main>
</Layout>
